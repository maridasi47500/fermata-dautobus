<p style="color: green"><%= notice %></p>

<% content_for :title, "Pieces" %>

<h1>Pieces</h1>
<%if user_signed_in?%>
<p style="font-size:30px;">
    <%=  "#{ISO3166::Country.countries.select{|i|i.iso_short_name == Country.find(current_user.country_id).name}[0].emoji_flag}" %>
<%=current_user.country.name%>
    <%=  "#{ISO3166::Country.countries.select{|i|i.iso_short_name == Country.find(current_user.foreign_country_id).name}[0].emoji_flag}" %>
<%=current_user.foreign_country.name%>
<%=Date.today.year%>


</p>

<%end%>

<div id="pieces">
  <% @pieces.each do |piece| %>
    <%= render piece %>
    <p>
      <%= link_to "Show this piece", piece %>
    </p>
  <% end %>
</div>

<%= link_to "New piece", new_piece_path %>
